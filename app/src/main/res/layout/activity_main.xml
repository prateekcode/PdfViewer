<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/pdf_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View The PDf"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/multiplePageBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="Open Multiple Pages"
        app:layout_constraintEnd_toEndOf="@+id/pdf_view"
        app:layout_constraintStart_toStartOf="@+id/pdf_view"
        app:layout_constraintTop_toBottomOf="@+id/pdf_view" />
</androidx.constraintlayout.widget.ConstraintLayout>